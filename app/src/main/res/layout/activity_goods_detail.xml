<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bap.yuwei.activity.goods.GoodsDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/nav_arrow"
            android:onClick="onBackClick"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_product"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="商品"
                android:textColor="@color/colorPrimary"
                android:onClick="toPosition"/>

            <TextView
                android:id="@+id/txt_detail"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="详情"
                android:onClick="toPosition"/>

            <TextView
                android:id="@+id/txt_comment"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="评价"
                android:onClick="toPosition"/>
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/view_line" />

    <com.bap.yuwei.view.StickyScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="350dp" />

            <TextView
                android:id="@+id/txt_goods_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:padding="5dp"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txt_old_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkgrey"
                android:padding="5dp"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_express_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/darkgrey"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_sell_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp" />
            </LinearLayout>
            <include layout="@layout/view_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="已选"
                    android:gravity="center"
                    android:textColor="@color/darkgrey"/>
                <TextView
                    android:id="@+id/txt_model_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/lightblack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="，"
                    android:gravity="center"
                    android:textColor="@color/lightblack"/>
                <TextView
                    android:id="@+id/txt_select_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="1件"
                    android:gravity="center"
                    android:textColor="@color/lightblack"/>


            </LinearLayout>
            <include layout="@layout/view_divider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/img_shop"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:src="@drawable/default_img"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/txt_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_shop"
                    android:layout_toEndOf="@+id/img_shop"
                    android:layout_toRightOf="@+id/img_shop"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/lightblack"/>

                <TextView
                    android:id="@+id/txt_shop_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_shop_name"
                    android:layout_toEndOf="@+id/img_shop"
                    android:layout_toRightOf="@+id/img_shop"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/darkgrey"
                    android:textSize="10dp"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txt_shop_collect_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/lightblack" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_shop_collect_num"
                        android:gravity="center_horizontal"
                        android:text="收藏人数"
                        android:textSize="10dp"
                        android:textColor="@color/darkgrey"/>
                </RelativeLayout>
                <include layout="@layout/view_vertical_line"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txt_goods_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/lightblack" />

                    <TextView
                        android:id="@+id/txt_last_month_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_goods_num"
                        android:gravity="center_horizontal"
                        android:text="全部商品"
                        android:textSize="10dp"
                        android:textColor="@color/darkgrey"/>
                </RelativeLayout>
                <include layout="@layout/view_vertical_line"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txt_new_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/lightblack" />

                    <TextView
                        android:id="@+id/txt_last_month_benefit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_new_num"
                        android:gravity="center"
                        android:text="店铺新品"
                        android:textSize="10dp"
                        android:textColor="@color/darkgrey"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/txt_tel_producter"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="联系供应商"
                    android:gravity="center"
                    android:background="@drawable/radius_grey_border"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/txt_enter_shop"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="进入店铺"
                    android:gravity="center"
                    android:background="@drawable/radius_grey_border"
                    android:textSize="12dp"/>
            </LinearLayout>

            <include layout="@layout/view_divider"/>
            <LinearLayout
                android:id="@+id/ll_detail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:tag="sticky">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="商品介绍"
                    android:textColor="@color/colorPrimary" />

                <include layout="@layout/view_vertical_line"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="规格参数" />
                <include layout="@layout/view_vertical_line"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="包装售后" />
            </LinearLayout>

            <WebView
                android:id="@+id/webview_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_specification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>


        </LinearLayout>

    </com.bap.yuwei.view.StickyScrollView>

</LinearLayout>
