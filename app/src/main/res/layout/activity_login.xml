<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_country_code"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1.5"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="chooseCountry"
                android:padding="6dp"
                android:text="账号"
                android:textColor="@color/lightblack"
                android:textSize="16dp" />


            <com.bap.yuwei.view.ClearableEditText
                android:id="@+id/et_user_name"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="5"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:hint="账号/邮箱/手机号"
                android:paddingLeft="5dp"
                android:textColorHint="@color/darkgrey"
                android:textSize="14dp"
                android:text="13915584070"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ADADAD" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1.5"
                android:background="@color/white"
                android:gravity="center"
                android:paddingRight="9dp"
                android:text="密码"
                android:textColor="@color/lightblack"
                android:textSize="16dp" />


            <com.bap.yuwei.view.ClearableEditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@color/white"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:layout_marginRight="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColorHint="@color/darkgrey"
                android:textSize="14dp"
                android:text="1"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ADADAD" />
    </LinearLayout>


    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/ll_login"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_purple_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:onClick="login"/>

    <TextView
        android:id="@+id/txt_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_login"
        android:layout_alignStart="@+id/btn_login"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="15dp"
        android:text="免费注册"
        android:textColor="@color/colorPrimary"
        android:onClick="regist"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_regist"
        android:layout_alignEnd="@+id/btn_login"
        android:layout_alignRight="@+id/btn_login"
        android:text="忘记密码"
        android:textColor="@color/colorPrimary"
        android:onClick="forgetPwd"/>

</RelativeLayout>