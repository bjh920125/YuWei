<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bap.yuwei.activity.order.OrderDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/od_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        android:contentInsetEnd="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onBackClick"
                android:scaleType="centerInside"
                android:src="@drawable/nav_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center"
                android:text="订单详情"
                android:textColor="@color/lightblack"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:visibility="invisible" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:scrollbars="none"
        android:layout_below="@+id/od_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/orderstatusback" />

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="25dp"
                    android:text=""
                    android:textColor="@color/white" />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/rl_express"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/white"
                android:onClick="showExpressDetail"
                android:clickable="true">
                <ImageView
                    android:id="@+id/img_express"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/wlc"
                    android:padding="3dp"/>

                <TextView
                    android:id="@+id/txt_express"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/img_express"
                    android:layout_toLeftOf="@+id/img_arrow_right2"
                    android:paddingTop="5dp"
                    android:text=""/>

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/img_express"
                    android:paddingBottom="5dp"
                    android:text=""
                    android:textColor="@color/darkgrey"/>

                <ImageView
                    android:id="@+id/img_arrow_right2"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_right_xiao"
                    android:layout_alignParentRight="true"
                    android:padding="3dp"/>
            </RelativeLayout>
            <include layout="@layout/view_marginleft_line"/>
            <RelativeLayout
                android:id="@+id/rl_receiver_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/img_location"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/txt_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_location"
                    android:paddingTop="5dp"
                    android:text="" />

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txt_receiver"
                    android:layout_below="@+id/txt_receiver"
                    android:paddingTop="5dp"
                    android:text=""
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/img_arrow_right"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow_right_xiao"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txt_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/txt_receiver"
                    android:layout_toLeftOf="@+id/img_arrow_right"
                    android:paddingTop="5dp"
                    android:text="" />
            </RelativeLayout>

            <include layout="@layout/view_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="7dp"
                android:paddingLeft="15dp"
                android:paddingTop="7dp">

                <ImageView
                    android:id="@+id/img_shop"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/default_img" />


                <TextView
                    android:id="@+id/txt_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="12dp" />

            </LinearLayout>

            <include layout="@layout/view_marginleft_line" />

            <com.linearlistview.LinearListView
                android:id="@+id/lv_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="商品总价"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/txt_goods_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="运费（快递）"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/txt_express_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="订单总价"
                    android:textColor="@color/lightblack"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_total_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textSize="10dp" />
            </LinearLayout>

            <include layout="@layout/view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="实付款"
                    android:textColor="@color/lightblack"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_actual_total_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp" />
            </LinearLayout>

            <include layout="@layout/view_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:text="联系卖家"
                    android:textColor="@color/lightblack" />

                <include layout="@layout/view_vertical_line" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:text="拨打电话" />
            </LinearLayout>

            <include layout="@layout/view_divider" />

            <TextView
                android:id="@+id/txt_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="订单编号："
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_alitrade_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:text="支付宝交易号："
                android:textSize="12dp" />


            <TextView
                android:id="@+id/txt_create_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:text="创建时间："
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_pay_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:text="付款时间："
                android:textSize="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:gravity="right">

        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:text="取消订单"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/radius_grey_border"
            android:visibility="gone"
            android:onClick="operateOrder"/>

        <TextView
            android:id="@+id/txt_pay"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:text="付款"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/radius_grey_border"
            android:visibility="gone"
            android:onClick="operateOrder"/>

        <TextView
            android:id="@+id/txt_alert_send"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:text="提醒发货"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/radius_grey_border"
            android:visibility="gone"
            android:onClick="operateOrder"/>

        <TextView
            android:id="@+id/txt_show_express"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:text="查看物流"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/radius_grey_border"
            android:visibility="gone"
            android:onClick="operateOrder"/>

        <TextView
            android:id="@+id/txt_receive"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:text="确认收货"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/radius_grey_border"
            android:visibility="gone"
            android:onClick="operateOrder"/>

        <TextView
            android:id="@+id/txt_comment"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:text="评价"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/radius_grey_border"
            android:visibility="gone"
            android:onClick="operateOrder"/>

        <TextView
            android:id="@+id/txt_delete"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:text="删除订单"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/radius_grey_border"
            android:visibility="gone"
            android:onClick="operateOrder"/>


    </LinearLayout>
</RelativeLayout>
