<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bap.yuwei.activity.sys.SettingActivity">

    <include layout="@layout/view_toolbar"/>

    <TextView
        android:id="@+id/txt_user_info"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/settings_user"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/arrow_right_xiao"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="个人资料"
        android:textColor="@color/lightblack"
        android:onClick="onMenuClick"/>

    <include layout="@layout/view_margin_line" />

    <TextView
        android:id="@+id/txt_security"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/settings_security"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/arrow_right_xiao"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="账户安全"
        android:textColor="@color/lightblack"
        android:onClick="onMenuClick"/>

    <include layout="@layout/view_margin_line" />

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/settings_xiaoxi"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/arrow_right_xiao"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="消息通知提醒"
        android:textColor="@color/lightblack"
        android:onClick="onMenuClick"/>

    <include layout="@layout/view_margin_line" />

    <TextView
        android:id="@+id/txt_clear"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/settings_qingchu"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/arrow_right_xiao"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="清除缓存"
        android:textColor="@color/lightblack"
        android:onClick="onMenuClick"/>

    <include layout="@layout/view_margin_line" />

    <include layout="@layout/view_divider"/>

    <TextView
        android:id="@+id/txt_service"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/settings_fuwu"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/arrow_right_xiao"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="服务中心"
        android:textColor="@color/lightblack"
        android:visibility="gone"/>

    <include layout="@layout/view_margin_line"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/txt_feedback"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/settings_yijian"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/arrow_right_xiao"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="意见反馈"
        android:textColor="@color/lightblack"
        android:onClick="onMenuClick"/>

    <include layout="@layout/view_margin_line" />


    <TextView
        android:id="@+id/txt_about"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/settings_guanyu"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/arrow_right_xiao"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="关于鱼尾"
        android:textColor="@color/lightblack"
        android:onClick="onMenuClick"
        android:visibility="gone"/>

    <include layout="@layout/view_margin_line"
        android:visibility="gone" />


    <TextView
        android:id="@+id/txt_logout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/ll_login"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/radius_purple_bg"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:onClick="loginout"/>

</LinearLayout>
