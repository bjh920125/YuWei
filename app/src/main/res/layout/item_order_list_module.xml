<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/img_shop"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/default_img" />


        <TextView
            android:id="@+id/txt_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text=""
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/red"
            android:textSize="12dp"/>

    </LinearLayout>

    <include layout="@layout/view_marginleft_line" />


    <com.linearlistview.LinearListView
        android:id="@+id/lv_order_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:text="合计：￥0.00（含运费￥0.00）"
            android:textSize="10dp"
            android:textColor="@color/lightblack"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/txt_total_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/txt_price"
            android:textSize="13dp"
            android:text="共1件商品"
            android:gravity="center"/>
    </RelativeLayout>
    <include layout="@layout/view_marginleft_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="right">

        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:text="取消订单"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/radius_grey_border"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_pay"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:text="付款"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/radius_grey_border"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_alert_send"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:text="提醒发货"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/radius_grey_border"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_show_express"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:text="查看物流"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/radius_grey_border"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_receive"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:text="确认收货"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/radius_grey_border"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_comment"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:text="评价"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/radius_grey_border"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/txt_addition_comment"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:text="追评"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/radius_grey_border"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_delete"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:text="删除订单"
            android:gravity="center"
            android:textSize="12dp"
            android:background="@drawable/radius_grey_border"
            android:visibility="gone"/>


    </LinearLayout>

    <include layout="@layout/view_divider" />


</LinearLayout>