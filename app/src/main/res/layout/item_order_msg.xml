<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="showMsgsList"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_order_msg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerInside"
        android:src="@drawable/sale" />

    <TextView
        android:id="@+id/txt_order_msg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/img_order_msg"
        android:layout_toRightOf="@+id/img_order_msg"
        android:text="订单消息"
        android:textColor="@color/lightblack" />

    <TextView
        android:id="@+id/txt_order_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_order_msg"
        android:layout_alignLeft="@+id/txt_order_msg_title"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="2dp"
        android:text=""
        android:textColor="@color/grey"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txt_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txt_order_msg_title"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:text=""
        android:textColor="@color/grey"
        android:textSize="12dp" />


    <ImageView
        android:id="@+id/img_red_dot"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:src="@drawable/circle_red"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

</RelativeLayout>