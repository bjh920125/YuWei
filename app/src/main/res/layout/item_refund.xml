<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingLeft="15dp"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/txt_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text=""
            android:textSize="12dp" />


    </LinearLayout>

    <include layout="@layout/view_marginleft_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitesmoke"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_goods"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/img_check"
            android:layout_toRightOf="@+id/img_check"
            app:srcCompat="@drawable/default_img" />

        <TextView
            android:id="@+id/txt_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/img_goods"
            android:layout_toRightOf="@+id/img_goods"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingRight="10dp"
            android:text="1"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_goods_name"
            android:layout_alignStart="@+id/txt_goods_name"
            android:layout_below="@+id/txt_goods_name"
            android:layout_marginTop="5dp"
            android:text="1"
            android:textColor="@color/darkgrey"
            android:textSize="11dp" />


        <TextView
            android:id="@+id/txt_num"
            android:layout_width="30dp"
            android:layout_height="22dp"
            android:layout_above="@+id/txt_refund_money"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@+id/img_add"
            android:background="@null"
            android:gravity="center"
            android:text=""
            android:textColor="@color/darkgrey"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_refund_money"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignBottom="@+id/img_goods"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="12dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="" />

        <TextView
            android:id="@+id/txt_refund_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:text="" />
    </LinearLayout>

    <include layout="@layout/view_line" />

    <LinearLayout
        android:id="@+id/ll_refund_item_operate"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp">


        <TextView
            android:id="@+id/txt_express"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radius_purple_border"
            android:gravity="center"
            android:text="退货运单号"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radius_purple_border"
            android:gravity="center"
            android:text="取消申请"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <include layout="@layout/view_divider"/>
</LinearLayout>